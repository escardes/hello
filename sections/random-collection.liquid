{% assign collection = collections['all'] %}

{{ collection }}

{{ collection.title }}
<ul>
  {% for val in collection.products %}
    <li> <a  style="color:{{ settings.link_color }}" href = "{{ val.url }}">{{ val.title }}-
      {{ val.price |money }}
      {% if val.available != true %}
        ( SOLDOUT)
      {% endif %}</a>
    </li>
  {% endfor %}
</ul>

{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
        "type":"checkbox",
        "id":"show-soldout",
        "label":"Show Sold out Products"
      }
    ]
  }
{% endschema %}

